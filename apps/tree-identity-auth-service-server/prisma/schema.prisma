datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model AuthProvider {
  clientId     String?
  clientSecret String?
  createdAt    DateTime @default(now())
  deletedAt    String?
  id           String   @id @default(cuid())
  name         String?
  redirectUri  String?
  updatedAt    DateTime @updatedAt
}
